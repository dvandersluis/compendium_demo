<%=
  query.render_chart(self, :pie) do |c|
    add_title "Spending Per Month"

    c.dimensions = "600x400"
    c.label_radius = 15
    c.margin_bottom = -100
    c.margin_top = -100
    c.margin_left = -50
    c.margin_right = 0

    c.colors = %w(#0E51A7 #640CAB #4DDE00)
    c.number_formatter = { precision: 2, decimalSeparator: '.', thousandsSeparator: ',' }
  end
%>